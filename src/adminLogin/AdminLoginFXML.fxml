<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #242B2E;"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="adminLogin.AdminLoginController">
   <Label text="My Quiz Application" textFill="WHITE" AnchorPane.leftAnchor="250.0" AnchorPane.topAnchor="30.0">
      <font>
         <Font size="32.0"/>
      </font>
   </Label>
   <VBox alignment="CENTER" prefHeight="200.0" prefWidth="350.0" style="-fx-background-color: #758283;"
         AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="120.0">
      <Label alignment="TOP_CENTER" text="Admin Login" textFill="WHITE">
         <font>
            <Font name="System Bold" size="26.0"/>
         </font>
         <VBox.margin>
            <Insets bottom="40.0"/>
         </VBox.margin>
      </Label>
      <TextField fx:id="adminEmail" alignment="TOP_LEFT" promptText="Enter Username">
         <VBox.margin>
            <Insets bottom="10.0" left="30.0" right="30.0" top="10.0"/>
         </VBox.margin>
         <font>
            <Font size="14.0"/>
         </font>
      </TextField>
      <PasswordField fx:id="adminPassword" alignment="TOP_LEFT" promptText="Enter Password">
         <VBox.margin>
            <Insets bottom="10.0" left="30.0" right="30.0" top="10.0"/>
         </VBox.margin>
         <font>
            <Font size="14.0"/>
         </font>
      </PasswordField>
      <Button fx:id="adminLoginButton" mnemonicParsing="false" onAction="#adminLogin" prefHeight="37.0"
              prefWidth="99.0" style="-fx-background-color: #8D3DAF;" text="Login" textFill="WHITE">
         <font>
            <Font size="16.0"/>
         </font>
         <VBox.margin>
            <Insets top="10.0"/>
         </VBox.margin>
      </Button>
   </VBox>
   <VBox alignment="CENTER" prefHeight="200.0" prefWidth="350.0" style="-fx-background-color: #758283;"
         AnchorPane.bottomAnchor="80.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="120.0">
      <Label alignment="TOP_CENTER" text="Student Login" textFill="WHITE">
         <font>
            <Font name="System Bold" size="26.0"/>
         </font>
         <VBox.margin>
            <Insets bottom="40.0"/>
         </VBox.margin>
      </Label>
      <TextField fx:id="studentEmail" alignment="TOP_LEFT" promptText="Enter Username">
         <font>
            <Font size="14.0"/>
         </font>
         <VBox.margin>
            <Insets bottom="10.0" left="30.0" right="30.0" top="10.0"/>
         </VBox.margin>
      </TextField>
      <PasswordField fx:id="studentPassword1" alignment="TOP_LEFT" promptText="Enter Password">
         <font>
            <Font size="14.0"/>
         </font>
         <VBox.margin>
            <Insets bottom="10.0" left="30.0" right="30.0" top="10.0"/>
         </VBox.margin>
      </PasswordField>
      <Button fx:id="studentLoginButton1" mnemonicParsing="false" onAction="#studentLogin" prefHeight="37.0"
              prefWidth="99.0" style="-fx-background-color: #8D3DAF;" text="Login" textFill="WHITE">
         <font>
            <Font size="16.0"/>
         </font>
         <VBox.margin>
            <Insets top="10.0"/>
         </VBox.margin>
      </Button>
   </VBox>
</AnchorPane>
